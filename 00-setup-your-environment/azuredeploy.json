{
    "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
        "location": {
            "type": "string",
            "defaultValue": "[resourceGroup().location]"
        },
        "cosmosdb_account_name": {
            "defaultValue": "[concat('sclabc-', uniqueString(resourceGroup().id))]",
            "type": "string"
        },
        "app_insights_workspace_name": {
            "defaultValue": "[concat('sclab-ai-', uniqueString(resourceGroup().id))]",
            "type": "string"
        },
        "log_analytics_workspace_name": {
            "defaultValue": "[concat('sclab-la-', uniqueString(resourceGroup().id))]",
            "type": "string"
        },
        "password": {
            "type": "securestring",
            "metadata": {
                "description": "The password for anything that requires a password"
            }
        },
        "rabbitContainerName": {
            "type": "string",
            "defaultValue": "[concat('sclabq-', uniqueString(resourceGroup().id))]"
        }

    },
    "variables": {
        "rabbitPorts": [
            {
                "port": "15672",
                "protocol": "TCP"
            },
            {
                "port": "5672",
                "protocol": "TCP"
            },
            {
                "port": "5671",
                "protocol": "TCP"
            }
        ]
    },
    "resources": [
        {
            "type": "Microsoft.DocumentDB/databaseAccounts",
            "apiVersion": "2019-08-01",
            "name": "[parameters('cosmosdb_account_name')]",
            "location": "[parameters('location')]",
            "kind": "MongoDB",
            "properties": {
                "enableAutomaticFailover": false,
                "enableMultipleWriteLocations": false,
                "isVirtualNetworkFilterEnabled": false,
                "virtualNetworkRules": [
                ],
                "disableKeyBasedMetadataWriteAccess": false,
                "databaseAccountOfferType": "Standard",
                "consistencyPolicy": {
                    "defaultConsistencyLevel": "Session",
                    "maxIntervalInSeconds": 5,
                    "maxStalenessPrefix": 100
                },
                "locations": [
                    {
                        "locationName": "[parameters('location')]",
                        "failoverPriority": 0,
                        "isZoneRedundant": false
                    }
                ],
                "capabilities": [
                ]
            }
        },
        {
            "type": "Microsoft.DocumentDB/databaseAccounts/mongodbDatabases",
            "apiVersion": "2019-12-12",
            "name": "[concat(parameters('cosmosdb_account_name'), '/account-db')]",
            "dependsOn": [
                "[resourceId('Microsoft.DocumentDB/databaseAccounts', parameters('cosmosdb_account_name'))]"
            ],
            "properties": {
                "resource": {
                    "id": "account-db"
                },
                "options": {
                }
            }
        },
        {
            "type": "Microsoft.DocumentDB/databaseAccounts/mongodbDatabases",
            "apiVersion": "2019-12-12",
            "name": "[concat(parameters('cosmosdb_account_name'), '/auth-db')]",
            "dependsOn": [
                "[resourceId('Microsoft.DocumentDB/databaseAccounts', parameters('cosmosdb_account_name'))]"
            ],
            "properties": {
                "resource": {
                    "id": "auth-db"
                }
            }
        },
        {
            "type": "Microsoft.DocumentDB/databaseAccounts/mongodbDatabases",
            "apiVersion": "2019-12-12",
            "name": "[concat(parameters('cosmosdb_account_name'), '/notification-db')]",
            "dependsOn": [
                "[resourceId('Microsoft.DocumentDB/databaseAccounts', parameters('cosmosdb_account_name'))]"
            ],
            "properties": {
                "resource": {
                    "id": "notification-db"
                }
            }
        },
        {
            "type": "Microsoft.DocumentDB/databaseAccounts/mongodbDatabases",
            "apiVersion": "2019-12-12",
            "name": "[concat(parameters('cosmosdb_account_name'), '/statistics-db')]",
            "dependsOn": [
                "[resourceId('Microsoft.DocumentDB/databaseAccounts', parameters('cosmosdb_account_name'))]"
            ],
            "properties": {
                "resource": {
                    "id": "statistics-db"
                }
            }
        },

        {
            "type": "Microsoft.OperationalInsights/workspaces",
            "apiVersion": "2015-11-01-preview",
            "name": "[parameters('log_analytics_workspace_name')]",
            "location": "[parameters('location')]",
            "properties": {
                "sku": {
                    "name": "PerGB2018"
                },
                "retentionInDays": 30
            }
        },
        {
            "type": "Microsoft.Insights/components",
            "apiVersion": "2015-05-01",
            "name": "[parameters('app_insights_workspace_name')]",
            "location": "[parameters('location')]",
            "kind": "web",
            "properties": {
                "Application_Type": "web",
                "Flow_Type": "Bluefield",
                "Request_Source": "rest"
            }
        },
        {
            "type": "Microsoft.DocumentDB/databaseAccounts/sqlDatabases",
            "apiVersion": "2019-08-01",
            "name": "[concat(parameters('cosmosdb_account_name'), '/azure-spring-cloud-cosmosdb')]",
            "dependsOn": [
                "[resourceId('Microsoft.DocumentDB/databaseAccounts', parameters('cosmosdb_account_name'))]"
            ],
            "properties": {
                "resource": {
                    "id": "azure-spring-cloud-cosmosdb"
                },
                "options": {
                    "throughput": "400"
                }
            }
        },
        {
            "type": "Microsoft.DocumentDB/databaseAccounts/sqlDatabases/containers",
            "apiVersion": "2019-08-01",
            "name": "[concat(parameters('cosmosdb_account_name'), '/azure-spring-cloud-cosmosdb/City')]",
            "dependsOn": [
                "[resourceId('Microsoft.DocumentDB/databaseAccounts/sqlDatabases', parameters('cosmosdb_account_name'), 'azure-spring-cloud-cosmosdb')]",
                "[resourceId('Microsoft.DocumentDB/databaseAccounts', parameters('cosmosdb_account_name'))]"
            ],
            "properties": {
                "resource": {
                    "id": "City",
                    "indexingPolicy": {
                        "indexingMode": "Consistent",
                        "automatic": true,
                        "includedPaths": [
                            {
                                "path": "/*"
                            }
                        ],
                        "excludedPaths": [
                            {
                                "path": "/\"_etag\"/?"
                            }
                        ]
                    },
                    "partitionKey": {
                        "paths": [
                            "/name"
                        ],
                        "kind": "Hash"
                    },
                    "conflictResolutionPolicy": {
                        "mode": "LastWriterWins",
                        "conflictResolutionPath": "/_ts"
                    }
                },
                "options": {
                }
            }
        },
        {
            "location": "[parameters('location')]",
            "name": "[parameters('rabbitContainerName')]",
            "type": "Microsoft.ContainerInstance/containerGroups",
            "apiVersion": "2018-10-01",
            "properties": {
                "containers": [
                    {
                        "name": "[parameters('rabbitContainerName')]",
                        "properties": {
                            "image": "rabbitmq:3.8",
                            "resources": {
                                "requests": {
                                    "cpu": "1",
                                    "memoryInGB": "1.0"
                                }
                            },
                            "ports": "[variables('rabbitPorts')]",
                            "environmentVariables": [
                                {
                                    "name": "RABBITMQ_DEFAULT_USER",
                                    "value": "default"
                                },
                                {
                                    "name": "RABBITMQ_DEFAULT_PASS",
                                    "value": "[parameters('password')]"
                                }
                            ]
                        }
                    }
                ],
                "restartPolicy": "Always",
                "osType": "Linux",
                "ipAddress": {
                    "type": "Public",
                    "ports": "[variables('rabbitPorts')]",
                    "dnsNameLabel": "[parameters('rabbitContainerName')]"
                }
            },
            "tags": {
            }
        }
    ]
}